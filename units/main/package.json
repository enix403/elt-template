{
    "name": "@application/main",
    "private": true,
    "version": "1.0.0",
    "license": "UNLICENSED",
    "scripts": {
        "tscript": "node --no-warnings -r dotenv/config -r tsconfig-paths/register -r ts-node/register/transpile-only",
        "watch": "yarn run build:dev -w",
        "start": "yarn run tscript ./toolchain/scripts/electron-runner.ts",
        "start:dist": "yarn run tscript ./toolchain/scripts/start-dist.ts",
        "server:start": "yarn run tscript src/devserver/server.ts",
        "server:watch": "tsnd -r dotenv/config -r tsconfig-paths/register --transpile-only --respawn --rs --cls src/devserver/server.ts",
        "build": "cross-env NODE_ENV=production yarn run tscript ./toolchain/scripts/build-self-contained.ts",
        "build:dev": "rollup -c --environment NODE_ENV:development",
        "build-native-deps": "electron-builder install-app-deps",
        "pack": "electron-builder build"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-replace": "^3.0.0",
        "@types/express": "^4.17.13",
        "@types/node": "^16.10.1",
        "chalk": "^4.1.2",
        "cross-env": "^7.0.3",
        "dotenv": "^10.0.0",
        "electron": "15.0.0",
        "electron-builder": "^22.11.7",
        "electron-debug": "^3.2.0",
        "json5": "^2.2.0",
        "merge-anything": "^4.0.1",
        "nodemon": "^2.0.13",
        "rollup": "^2.57.0",
        "rollup-plugin-auto-external": "^2.0.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-filesize": "^9.1.1",
        "rollup-plugin-inject-process-env": "^1.3.1",
        "rollup-plugin-output-manifest": "^2.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-ts": "^1.4.7",
        "ts-node": "^10.2.1",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.11.0",
        "tslib": "^2.3.1",
        "typescript": "^4.4.3",
        "wait-on": "^6.0.0"
    }
}
